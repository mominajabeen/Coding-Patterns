using namespace std;

#include <iostream>
#include <vector>

class Solution
{
public:
  int countIslands(vector<vector<int>> &matrix)
  {
    int rows = matrix.size();
    int cols = matrix[0].size();
    int totalIslands = 0;

    for(int i = 0; i < rows; i++){
      for(int j = 0; j < cols; j++){
        if(matrix[i][j] == 1){
          totalIslands++;
          isLandDFS(matrix, i, j);
        }
      }
    }
    return totalIslands;
  }
private:
  void isLandDFS(vector<vector<int>> &matrix, int x, int y){
    if(x < 0 or x >= matrix.size() or y < 0 or y >= matrix[0].size())
      return;
    if(matrix[x][y] == 0)
      return;
    matrix[x][y] = 0;
    isLandDFS(matrix, x + 1, y);
    isLandDFS(matrix, x - 1, y);
    isLandDFS(matrix, x, y + 1);
    isLandDFS(matrix, x, y - 1);
  }
};
