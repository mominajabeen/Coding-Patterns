class Solution {
public:
  ListNode *reverse(ListNode *head) {
    ListNode *next = nullptr;
    ListNode* curr = head;
    ListNode* prev = nullptr;
  
    while(curr != nullptr){
      next = curr->next;
      curr->next = prev;
      prev = curr;
      curr = next;
    }
    return prev;
  }
};
