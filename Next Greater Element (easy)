#include <iostream>
#include <stack>
#include <vector>

class Solution {
public:
    std::vector<int> nextLargerElement(std::vector<int> arr) {
        int n = arr.size();
        std::vector<int> res(n);
        stack<int> stk;

        for(int i = n - 1; i >= 0; i--){
            
            while(!stk.empty() && stk.top() <= arr[i]){
                stk.pop();
            }

            res[i] = stk.empty()? -1 : stk.top();
            stk.push(arr[i]);
        }
        
        return res;
    }
};
