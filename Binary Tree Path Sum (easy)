class Solution {
public:
  bool hasPath(TreeNode *root, int sum) {
    if(!root) return false;

    if(root->val == sum && !root->left && !root->right) return true;

    return (hasPath(root->left, sum - root->val) or hasPath(root->right, sum - root->val));
  }
};
