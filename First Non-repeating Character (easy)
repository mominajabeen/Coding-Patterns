#include <iostream>
#include <unordered_map>
using namespace std;

class Solution {
public:
    int firstUniqChar(string s) {
        unordered_map<char, int> freqCount;
        for(char c : s) freqCount[c]++;

        for(int i = 0; i < s.length(); i++){
            if(freqCount[s[i]] == 1)
                return i;
        }
        return -1;
    }
};
