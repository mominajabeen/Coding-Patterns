#include <iostream>
#include <stack>
#include <string>

using namespace std;

class Solution {
public:
    string removeKdigits(string num, int k) {
        stack<char> stack;
        stack.push(num[0]);
        for(int i = 1; i < num.size(); i++){
            while(!stack.empty() && k > 0 && stack.top() > num[i]){
                stack.pop();
                k--;
            }
            stack.push(num[i]);
        }
        for(int i = 0; i < k; i++){
            stack.pop();
        }
        string res = "";
        while(!stack.empty()){
            res = stack.top() + res;
            stack.pop();
        }
        res.erase(0,res.find_first_not_of('0'));
        return res.empty() ? "0" : res;
    }
};
